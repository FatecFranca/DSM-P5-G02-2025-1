<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CardioCheck.ResultadoPage"
             Title="Resultado da Análise"
             NavigationPage.HasBackButton="False"
             BackgroundColor="{StaticResource White}">

    <ContentPage.Resources>
        <Style x:Key="ResultSummaryLabel" TargetType="Label">
            <Setter Property="FontFamily" Value="LatoRegular" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="TextColor" Value="{StaticResource Gray600}" />
            <Setter Property="VerticalOptions" Value="Center"/>
        </Style>

        <Style x:Key="ResultSummaryValue" TargetType="Label">
            <Setter Property="FontFamily" Value="LatoBold" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="TextColor" Value="{StaticResource Gray900}" />
            <Setter Property="HorizontalOptions" Value="End" />
            <Setter Property="VerticalOptions" Value="Center"/>
        </Style>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="25">

            <Border x:Name="ResultadoBorder"
                    StrokeThickness="2"
                    Padding="20"
                    Margin="0,10,0,15"
                    StrokeShape="RoundRectangle 10"
                    BackgroundColor="{StaticResource Gray100}">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Resultado da Análise"
                           FontSize="20"
                           FontFamily="LatoBold"
                           HorizontalOptions="Center"
                           TextColor="{StaticResource Gray900}"/>

                    <Label x:Name="ResultadoPredicaoLabel"
                           FontSize="32"
                           FontAttributes="Bold"
                           HorizontalOptions="Center" />

                    <Label x:Name="ResultadoRecomendacaoLabel"
                           FontSize="16"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center"
                           TextColor="{StaticResource Gray600}"/>
                </VerticalStackLayout>
            </Border>

            <Label Text="Resumo dos Dados"
                   FontSize="20"
                   FontFamily="LatoBold"
                   TextColor="{StaticResource Primary}"
                   Margin="0,10,0,5"/>

            <Grid ColumnDefinitions="Auto, *" RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto" RowSpacing="12">

                <Label Grid.Row="0" Grid.Column="0" Text="Nome:" Style="{StaticResource ResultSummaryLabel}" />
                <Label x:Name="NomeLabel" Grid.Row="0" Grid.Column="1" Style="{StaticResource ResultSummaryValue}" />

                <Label Grid.Row="1" Grid.Column="0" Text="Idade:" Style="{StaticResource ResultSummaryLabel}" />
                <Label x:Name="IdadeLabel" Grid.Row="1" Grid.Column="1" Style="{StaticResource ResultSummaryValue}" />

                <Label Grid.Row="2" Grid.Column="0" Text="Sexo:" Style="{StaticResource ResultSummaryLabel}" />
                <Label x:Name="SexoLabel" Grid.Row="2" Grid.Column="1" Style="{StaticResource ResultSummaryValue}" />

                <Label Grid.Row="3" Grid.Column="0" Text="Dor no Peito:" Style="{StaticResource ResultSummaryLabel}" />
                <Label x:Name="DorPeitoLabel" Grid.Row="3" Grid.Column="1" Style="{StaticResource ResultSummaryValue}" />

                <Label Grid.Row="4" Grid.Column="0" Text="Pressão Arterial:" Style="{StaticResource ResultSummaryLabel}" />
                <Label x:Name="PressaoLabel" Grid.Row="4" Grid.Column="1" Style="{StaticResource ResultSummaryValue}" />

                <Label Grid.Row="5" Grid.Column="0" Text="Colesterol:" Style="{StaticResource ResultSummaryLabel}" />
                <Label x:Name="ColesterolLabel" Grid.Row="5" Grid.Column="1" Style="{StaticResource ResultSummaryValue}" />

                <Label Grid.Row="6" Grid.Column="0" Text="Glicemia > 120:" Style="{StaticResource ResultSummaryLabel}" />
                <Label x:Name="GlicemiaLabel" Grid.Row="6" Grid.Column="1" Style="{StaticResource ResultSummaryValue}" />

                <Label Grid.Row="7" Grid.Column="0" Text="ECG em Repouso:" Style="{StaticResource ResultSummaryLabel}" />
                <Label x:Name="EcgLabel" Grid.Row="7" Grid.Column="1" Style="{StaticResource ResultSummaryValue}" />

                <Label Grid.Row="8" Grid.Column="0" Text="Freq. Card. Máx.:" Style="{StaticResource ResultSummaryLabel}" />
                <Label x:Name="FreqCardiacaLabel" Grid.Row="8" Grid.Column="1" Style="{StaticResource ResultSummaryValue}" />

                <Label Grid.Row="9" Grid.Column="0" Text="Angina por Exerc.:" Style="{StaticResource ResultSummaryLabel}" />
                <Label x:Name="AnginaExercicioLabel" Grid.Row="9" Grid.Column="1" Style="{StaticResource ResultSummaryValue}" />

                <Label Grid.Row="10" Grid.Column="0" Text="Oldpeak:" Style="{StaticResource ResultSummaryLabel}" />
                <Label x:Name="OldpeakLabel" Grid.Row="10" Grid.Column="1" Style="{StaticResource ResultSummaryValue}" />

                <Label Grid.Row="11" Grid.Column="0" Text="Inclinação ST:" Style="{StaticResource ResultSummaryLabel}" />
                <Label x:Name="InclinacaoStLabel" Grid.Row="11" Grid.Column="1" Style="{StaticResource ResultSummaryValue}" />
            </Grid>

            <Button Text="Finalizar"
                    Clicked="OnFinalizarClicked"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Margin="0,20,0,0"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>