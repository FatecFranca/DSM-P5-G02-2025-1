<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CardioCheck.CadastroPage"
             Title="Cadastro de Médico"
             BackgroundColor="#F2F2F2">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="15" VerticalOptions="CenterAndExpand">

            <Label Text="Cadastro de Médico"
                   FontSize="26"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#0073C2"/>

            <Entry x:Name="NomeEntry"
                   Placeholder="Nome completo"
                   BackgroundColor="White"
                   TextColor="Black"/>

            <Entry x:Name="CrmEntry"
                   Placeholder="CRM"
                   Keyboard="Numeric"
                   BackgroundColor="White"
                   TextColor="Black"/>

            <Entry x:Name="EmailEntry"
                   Placeholder="E-mail"
                   Keyboard="Email"
                   BackgroundColor="White"
                   TextColor="Black"/>

            <Entry x:Name="SenhaEntry"
                   Placeholder="Senha"
                   IsPassword="True"
                   BackgroundColor="White"
                   TextColor="Black"/>

            <Entry x:Name="EspecialidadeEntry"
                   Placeholder="Especialidade"
                   BackgroundColor="White"
                   TextColor="Black"/>

            <Label x:Name="MensagemLabel"
                   TextColor="Red"
                   FontSize="14"
                   HorizontalOptions="Center"/>

            <Button Text="Cadastrar"
                    Clicked="OnCadastrarClicked"
                    BackgroundColor="#0073C2"
                    TextColor="White"
                    CornerRadius="10"
                    HeightRequest="50"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
