<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CardioCheck.HomePage"
             Title="Início"
             NavigationPage.HasNavigationBar="False">

    <!-- O Grid principal organiza a página, colocando o fundo atrás do conteúdo -->
    <Grid>

        <!-- Camada 1: O fundo gradiente que ocupa toda a tela -->
        <BoxView>
            <BoxView.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#2196F3" Offset="0.0" />
                    <GradientStop Color="#0D47A1" Offset="1.0" />
                </LinearGradientBrush>
            </BoxView.Background>
        </BoxView>

        <!-- Camada 2: O conteúdo rolável da página -->
        <ScrollView>
            <VerticalStackLayout Spacing="15" Padding="30">

                <!-- Botão de Logout -->
                <Border Padding="8"
                        BackgroundColor="Transparent"
                        StrokeThickness="0"
                        HorizontalOptions="End">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnLogoutClicked"/>
                    </Border.GestureRecognizers>
                    <HorizontalStackLayout Spacing="5">
                        <Image Source="logout_icon.png" HeightRequest="16" />
                        <Label Text="Sair" TextColor="White" VerticalOptions="Center" FontFamily="LatoBold"/>
                    </HorizontalStackLayout>
                </Border>

                <!-- Boas-vindas -->
                <Image Source="logo_white.png"
                       HeightRequest="60"
                       Margin="30,20,30,0"
                       HorizontalOptions="Center" />

                <Label Text="Bem-vindo(a)"
                       TextColor="White"
                       FontSize="32"
                       FontFamily="LatoBold"
                       HorizontalTextAlignment="Center"
                       LineHeight="1.2"/>

                <!-- Card de Propósito -->
                <Border StrokeShape="RoundRectangle 20"
                        Padding="40"
                        BackgroundColor="{StaticResource White}"
                        StrokeThickness="0"
                        Margin="0,20,0,0">
                    <!-- Adicionando a sombra aqui -->
                    <Border.Shadow>
                        <Shadow Brush="Black"
                                Offset="10,15"
                                Radius="40"
                                Opacity="0.5" />
                    </Border.Shadow>


                    <VerticalStackLayout Spacing="25">
                        <!-- Imagem Animada Adicionada -->
                        <Image Source="heartbeat.gif"
                               IsAnimationPlaying="True"
                               HeightRequest="100"
                               Margin="0,-10,0,0"/>

                        <Label Text="Apoiando a sua decisão!"
                               TextColor="{StaticResource Primary}"
                               FontFamily="LatoBold"
                               FontSize="20"
                               HorizontalOptions="Center"/>
                        <Label TextColor="Gray"
                               FontSize="18"
                               LineHeight="1.4"
                               HorizontalTextAlignment="Justify">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="O CardioCheck é uma ferramenta de apoio a decisão, desenvolvida para "/>
                                    <Span Text="médicos generalistas" FontAttributes="Bold"/>
                                    <Span Text=". Através de uma análise preliminar, o app auxilia na triagem de pacientes com potencial risco cardíaco."/>

                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                    </VerticalStackLayout>
                </Border>





            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
